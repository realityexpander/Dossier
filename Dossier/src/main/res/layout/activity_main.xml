<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#a8a8e6"
    android:orientation="vertical">

<RelativeLayout android:layout_width="341dp"
                android:layout_height="89dp">
    <ImageView
            android:layout_width="91dp"
            android:layout_height="87dp"
            android:id="@+id/imageView"
            android:src="@drawable/chris_avatar"
            android:layout_alignLeft="@+id/textView8"/>

    <!--
            android:layout_alignLeft="@+id/launch_bartext"
            android:layout_alignRight="@+id/textView3"/>
            android:layout_alignParentTop="false"
            android:contentDescription="chris_avatar"
            android:longClickable="true"
            android:cropToPadding="false"
            android:clickable="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignParentLeft="false"
            />
    -->


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/nameLabel"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignTop="@+id/imageView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/nameData"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ageLabel"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ageData"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/faveAppData"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/faveAppLabel"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"/>

</RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/synopsisText"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-5dp"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Show Apps"
            android:id="@+id/show_apps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>


</LinearLayout>